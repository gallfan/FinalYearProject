@model MechanicTracker.mechanic

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<img style="display:none;" height="75" width="75" id="progressform" src="~/Images/Loading1.gif" />
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "createMechanic" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Create Mechanic</legend>


        <div class="form-group">
            <label class="col-sm-5 control-label forms">First Name</label>
            <div class="col-sm-3 input-container">
                @Html.EditorFor(model => model.Firstname)
            </div>
            <div class="col-sm-7">@Html.ValidationMessageFor(model => model.Firstname, null, new { @style = "color:red;!important" })</div>
        </div>
        <input type="hidden" value="true" name="available" />
        <div class="form-group">
            <label class="col-sm-5 control-label forms">Last Name</label>
            <div class="col-sm-3 input-container">
                @Html.EditorFor(model => model.LastName)

            </div>
            <div class="col-sm-7">@Html.ValidationMessageFor(model => model.LastName, null, new { @style = "color:red;!important" })</div>
        </div>

        <div class="form-group">
            <label class="col-sm-5 control-label forms">Email</label>
            <div class="col-sm-3 input-container">
                @Html.EditorFor(model => model.Email)

            </div>
            <div class="col-sm-7">@Html.ValidationMessageFor(model => model.Email, null, new { @style = "color:red;!important" })</div>
        </div>

        <div class="form-group">
            <label class="col-sm-5 control-label forms">Phone No</label>
            <div class="col-sm-3 input-container">
                @Html.EditorFor(model => model.PhoneNumber)

            </div>
            <div class="col-sm-7">@Html.ValidationMessageFor(model => model.PhoneNumber, null, new { @style = "color:red;!important" })  </div>
        </div>

        <div class="form-group">
            <label class="col-sm-5 control-label forms">Skill Level</label>
            <div class="col-sm-3 input-container">
                @Html.EditorFor(model => model.SkillLevel)

            </div>
            <div class="col-sm-7">@Html.ValidationMessageFor(model => model.SkillLevel, null, new { @style = "color:red;!important", @type = "number", min = "1", max = "5" })</div>
        </div>

        <div class="form-group">
            <label class="col-sm-5 control-label forms">Username</label>
            <div class="col-sm-3 input-container">
                @Html.TextBoxFor(model => model.Username, new { @onblur = "checkuname($('#username').val());", id = "username" })

            </div>
            <div class="col-sm-7"> @Html.ValidationMessageFor(model => model.Username, null, new { @style = "color:red;!important", id = "uservali" })</div>
        </div>

        <div class="form-group">
            <label class="col-sm-5 control-label forms">Password</label>
            <div class="col-sm-3 input-container">
                <input type="password" name="password" id="password" />

            </div>
            <div class="col-sm-7"><label id="passloabel"></label></div>
        </div>

        <div class="form-group">
            <label class="col-sm-5 control-label forms">Re-Enter Password</label>
            <div class="col-sm-3 input-container">
                <input id="passwordfinal" onblur="checkpassEqual($('#password').val(), $('#passwordfinal').val())" type="password" />

            </div>
            <div class="col-sm-7"><label id="passloabel2"></label></div>
        </div>

        <div class="form-group">
            <div class="col-sm-12">
                <input type="submit" value="Create" id="btnclick" onclick="checkvalidation()" class="btn btn-danger btn-xs pull-right" style="width:100px" />
                @*<button onclick="checkvalidation()" id="btnclick" value="Submit" class="btn btn-danger pull-right">Create</button>*@
            </div>
        </div>

    </fieldset>

        
       
}
 



