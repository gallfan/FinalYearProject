@model MechanicTracker.mechanic

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<fieldset>
    <legend>Edit Mechanic</legend>
    <img style="display:none;" height="75" width="75" id="progressform" src="~/Images/Loading1.gif" /> 
    @using (Html.BeginForm())
    { 
        @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    }
    <form id="EditMechanic" style="margin-top: -25px;">
        <div>
            @Html.ValidationMessage("Message")
        </div>
        <input name="MechanicID"  type="text" value="@Model.MechanicID" hidden="hidden" /><br />
        <div class="form-group">
            <label class="col-sm-5 control-label forms">First Name</label>
            <div class="col-sm-3 input-container">
                <input type="text" name="Firstname" value="@Model.Firstname"/>
            </div>
            <div class="col-sm-3">@Html.ValidationMessage("Firstname")</div>
        </div>
        <div class="form-group">
            <label class="col-sm-5 control-label forms">Last Name</label>
            <div class="col-sm-3 input-container">
                <input type="text" name="LastName" value="@Model.LastName"/>
            </div>
            <div class="col-sm-3">@Html.ValidationMessage("LastName")</div>
        </div>
        <div class="form-group">
            <label class="col-sm-5 control-label forms">Email</label>
            <div class="col-sm-3 input-container">
                <input type="text" name="email" value="@Model.Email"/>
            </div>
            <div class="col-sm-3">@Html.ValidationMessage("Email")</div>
        </div>
        <div class="form-group">
            <label class="col-sm-5 control-label forms">Phone No.</label>
            <div class="col-sm-3 input-container">
                <input type="text" name="PhoneNumber" value="@Model.PhoneNumber"/>
            </div>
            <div class="col-sm-3">@Html.ValidationMessage("PhoneNumber")</div>
        </div>
        <div class="form-group">
            <label class="col-sm-5 control-label forms">Skill Level</label>
            <div class="col-sm-3 input-container">
                <input type="number" max="5" min="1" name="SkillLevel" value="@Model.SkillLevel"/>
            </div>
            <div class="col-sm-3">@Html.ValidationMessage("SkillLevel")</div>
        </div>
        <input type="hidden" name="Username" value="@Model.Username" />
        <input type="hidden" name="RowVersion" value="@Model.RowVersion" />
        <div class="form-group">
            <div class="col-md-12" style="margin-top:20px">
                <input type="submit" value="Edit" id="btnclick" onclick="editMech()"  class="btn btn-danger btn-xs pull-right" style="width:100px"  />
            
            </div>
        </div>
    </form>
</fieldset>


