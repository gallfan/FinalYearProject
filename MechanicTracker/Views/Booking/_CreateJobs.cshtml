@using MechanicTracker
@*@model IEnumerable<MechanicTracker.job>*@

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<fieldset>
    <legend>Create Job</legend>
    <img style="display:none;" height="50" width="50" id="progressform" src="~/Images/Loading1.gif" />  
<form id="createJobs">

   <input name="BookingID" hidden="hidden" type="text" value="@ViewBag.bookingID"  />
    <input name="Difficulty" hidden="hidden" type="text" value="1"  />
    <div class="form-group">
            <label class="col-sm-5 control-label forms" style="margin-top:4px;">Job Catergory</label>
        <div class="col-sm-3 input-container">
            <input name="Status"  type="text" value="New" hidden="hidden"  />
            <select style="width:100px" name="JobCategoryID"  onchange="selectJobs(value)">
            <option>Select</option>
            @foreach (jobscategory jc in @ViewBag.categories)
            {
               <option value="@jc.JobsCategoryID">@jc.Type</option>
            }
        </select>
        </div>
    </div> 
    <div class="form-group">
    <label class="col-sm-5 control-label forms" style="margin-top:4px;">Jobs</label>
        <div class="col-sm-3 input-container" >
            <select id="jobbs" name="JobsListID">
                <option>Select</option>
            </select>
        </div>
    </div>
    <div class="form-group">
    <label class="col-sm-5 control-label forms" style="margin-top:4px;">Notes</label>
        <div class="col-sm-3 input-container">
            @*<textarea type="text" name="notes" />*@<textarea name="notes"></textarea>
        </div>
    </div> 
    <div class="row">
        <div class="form-group">
        <div class="col-md-offset-5 col-md-6 forms pull-left" style="margin-top:30px;">
            <input type="submit" onclick="Addjobs()" value="Create" class ="btn btn-danger btn-xs"/>
        </div>
            </div>
    </div> 
    
</form>
    </fieldset>