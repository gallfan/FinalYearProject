@model MechanicTracker.job

<div class="container" style="margin-top:-30%;">
    <div class="col-xs-12">
        <h3 class="text-center">Comment on Job</h3>
        <p>
        <input name="jobId" id="jobId" value="@Html.DisplayFor(model=>model.JobID)" type="hidden" />
        <textarea class="form-control" name="Comments" id="Comments" />
        </p>
    </div>
    <div class="col-xs-12">
        <a href="/mechanicjobs/index" class="btn btn-danger" style="width:100%;" onclick="Commentsbtn($('#jobId').attr('value'), $('#Comments').val())">Finish Job</a>
    </div>
        

